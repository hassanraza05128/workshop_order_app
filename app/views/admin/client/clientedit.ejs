<%- include('../template/head'); -%>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User Edit
            <small>Here Admin can do changes to user profile</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>
    <%- include('../template/head'); -%>


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Client Registration
                <small>Here we Register new Customer</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content container-fluid">

            <div class="row">
                <div class="col-md-offset-3 col-md-5">


                    <form method="post">
                        <div class="form-group has-feedback">
                            <input type="text" name="name" required class="form-control" placeholder="Customer's Name" value="<%= old_name %>" >
                            <span class="glyphicon glyphicon-book form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                      <textarea name="address" class="form-control" id=""  rows="2">
                          <%= old_address %>
                      </textarea>
                            <span class="glyphicon glyphicon-info-sign form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" name="cnic"
                                   pattern="^[0-9+]{5}-[0-9+]{7}-[0-9]{1}$" class="form-control" placeholder="CNIC" value="<%= old_cnic %>" >
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" name="phoneno" required
                                   pattern="^((\+92)|(0092))-{0,1}\d{3}-{0,1}\d{7}$|^\d{11}$|^\d{4}-\d{7}$" class="form-control" placeholder="Phone No" value="<%= old_phoneno %>" >
                            <span class="glyphicon glyphicon-phone-alt form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <select name="city" id="" required class="form-control">
                                <option value="sargodha" <% if(old_city!==''){ %>selected<% } %> >Sargodha</option>
                            </select>
                            <!--<span class="glyphicon glyphicon-star form-control-feedback"></span>-->
                        </div>
                        <div class="form-group has-feedback">
                            <select name="country" id="" required class="form-control">
                                <option value="pakistan" <% if(old_country!==''){ %>selected<% } %>>Pakistan</option>
                            </select>
                            <!--<span class="glyphicon glyphicon-star form-control-feedback"></span>-->
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Register New Client</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%- include('../template/foot'); -%>
