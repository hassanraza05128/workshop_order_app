<%- include('../template/head'); -%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User List
            <small>Here we can see all register users</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content ">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <%if(error.name){%><div class="alert alert-error alert-dismissable"><%=error.name+' : '+error.message%></div><%}%>
                        <h3 class="box-title <%= (redirect_error)?'text-red':'text-blue' %>"><%= redirect_msg %></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Sr no</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>CNIC</th>
                                <th>Phone no</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% var i=0; %>
                            <% table.forEach(function(client){  %>
                            <tr>
                                <td><%= i++ %></td>
                                <td><img src="<%= client.picture %>" alt="no_image" style="height:80px">    </td>
                                <td><%= client.name %></td>
                                <td><%= client.address %></td>
                                <td><%= client.cnic %></td>
                                <td><%= client.phoneno %></td>
                                <td>

<!--//   status button...........................-->
                                    <!--<% if(client.status==='active'){ %>-->
                                    <!--<a href="/admin/userstatus?id=<%= client._id %>" id="statusbtn" class="btn btn-primary" >-->
                                        <!--active-->
                                    <!--</a>-->
                                    <!--<% }else{ %>-->
                                    <!--<a href="/admin/userstatus?id=<%= client._id %>" id="statusbtn" class="btn btn-warning" >-->
                                        <!--deactive-->
                                    <!--</a>-->
                                    <!--<% } %>-->
 <!--//     /status button .............................-->
<!--//      update button ................................-->
                                    <%if (!client.deleted){ %>
                                    <a href="/admin/clientupdate?id=<%= client._id %>" id="updatebtn" class="btn btn-default" >
                                        update
                                    </a>
                                    <%}%>
<!--//      update button ...............................-->
<!--//      delete/restore button ................................-->
                                    <% if(client.deleted){%>
                                    <a href="/admin/clientrestore?id=<%= client._id %>" id="restorebtn" class="btn btn-warning " >
                                        Restore
                                    </a>
                                    <% }else{%>
                                    <a href="/admin/clientdelete?id=<%= client._id %>" id="deletebtn" class="btn btn-danger" >
                                        delete
                                    </a>
                                    <%}%>
<!--//      delete/restore button ................................-->
                                </td>
                            </tr>
                            <% }); %>

                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Sr no</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>CNIC</th>
                                <th>Phone no</th>
                                <th>Actions</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../template/foot'); -%>