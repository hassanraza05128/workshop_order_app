<%- include('../template/head'); -%>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Product Type Registration
            <small>Here we Register new Product Type</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <p><%= msg %></p>
        </div>

      <div class="row">
          <div class="col-md-offset-3 col-md-5">


              <form method="post">
                  <div class="form-group has-feedback">
                      <Select type="text" name="parent" required class="form-control" placeholder="Select Parent"  >
                          <option selected="true">No Parent</option>
                      </Select>
                  </div>

                  <div class="form-group has-feedback">
                      <input type="text" name="name" required class="form-control" placeholder="New Product Type Name" value="<%= old_name %>" >
                      <span class="glyphicon glyphicon-book form-control-feedback"></span>
                  </div>
                  <div class="row">
                      <div class="col-md-6">
                          <button type="submit" class="btn btn-primary btn-block btn-flat">Register New Product Type</button>
                      </div>
                  </div>
              </form>

          </div>
      </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../template/foot'); -%>