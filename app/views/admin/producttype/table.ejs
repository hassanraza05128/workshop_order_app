<%- include('../template/head'); -%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Product Type List
            <small>Here we can see all registered Product Type</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content ">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <%if(error.name){%><div class="alert alert-error alert-dismissable"><%=error.name+' : '+error.message%></div><%}%>
                        <h3 class="box-title <%= (!redirect_error)?'text-red':'text-blue' %>"><%= redirect_msg %></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Sr no</th>
                                <th>Type Name</th>
                                <th>Parent</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% var i=0; %>
                            <% table.forEach(function(producttype){  %>
                            <tr>
                                <td><%= ++i %></td>
                                <td><%= producttype.name %></td>
                                <td><%= (producttype.parent!==null)?producttype.parent.name:"No Parent" %></td>
                                <td>
<!--//   status button...........................-->
                                    <!--<% if(producttype.status==='active'){ %>-->
                                    <!--<a href="/admin/producttypestatus?id=<%= producttype._id %>" id="statusbtn" class="btn btn-primary" >-->
                                        <!--active-->
                                    <!--</a>-->
                                    <!--<% }else{ %>-->
                                    <!--<a href="/admin/producttypestatus?id=<%= producttype._id %>" id="statusbtn" class="btn btn-warning" >-->
                                        <!--deactive-->
                                    <!--</a>-->
                                    <!--<% } %>-->
 <!--//     /status button .............................-->
<!--//      update button ................................-->
                                    <%if (!producttype.deleted){ %>
                                    <a href="/admin/producttypeupdate?id=<%= producttype._id %>" id="updatebtn" class="btn btn-default" >
                                        update
                                    </a>
                                    <% } %>
<!--//      update button ...............................-->
<!--//      update button ................................-->
                                    <% if(producttype.deleted){%>
                                    <a href="/admin/producttyperestore?id=<%= producttype._id %>" id="restorebtn" class="btn btn-warning " >
                                        Restore
                                    </a>
                                    <% }else{ %>
                                    <a href="/admin/producttypedelete?id=<%= producttype._id %>" id="deletebtn" class="btn btn-danger" >
                                        delete
                                    </a>
                                    <% } %>
<!--//      update button ................................-->
                                </td>
                            </tr>
                            <% }); %>

                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Sr no</th>
                                <th>Type Name</th>
                                <th>Parent</th>
                                <th>Actions</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../template/foot'); -%>