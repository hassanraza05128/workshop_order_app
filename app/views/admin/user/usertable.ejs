<%- include('../template/head'); -%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User List
            <small>Here we can see all register users</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content ">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <%if(error.name){%><div class="alert alert-error alert-dismissable"><%=error.name+' : '+error.message%></div><%}%>
                        <h3 class="box-title <%= (!redirect_error)?'text-red':'text-blue' %>">g<%= (redirect_msg)? redirect_msg:'' %></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Sr no</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>UserName</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% var i=0; %>
                            <% table.forEach(function(usr){  %>
                            <tr>
                                <td><%= i++ %></td>
                                <td><img src="<%= usr.picture %>" alt="no_image" style="height:80px">    </td>
                                <td><%= usr.name %></td>
                                <td><%= usr.username %></td>
                                <td><%= usr.type %></td>
                                <td>
                                    <% if(usr.type!=='admin'){ %>
<!--//   status button...........................-->
                                    <%if(!usr.deleted){%>
                                    <% if(usr.status==='active'){ %>
                                    <a href="/admin/userstatus?id=<%= usr._id %>" id="statusbtn" class="btn btn-primary" >
                                        active
                                    </a>
                                    <% }else{ %>
                                    <a href="/admin/userstatus?id=<%= usr._id %>" id="statusbtn" class="btn btn-warning" >
                                        deactive
                                    </a>
                                    <% } %>
 <!--//     /status button .............................-->
<!--//      update button ................................-->

                                    <a href="/admin/userupdate?id=<%= usr._id %>" id="updatebtn" class="btn btn-default" >
                                        update
                                    </a>
<!--//      update button ...............................-->
<!--//      dell/restore button ................................-->

                                    <a href="/admin/userdelete?id=<%= usr._id %>" id="deletebtn" class="btn btn-danger" >
                                        delete
                                    </a>
                                    <%}else{%>
                                    <a href="/admin/userrestore?id=<%= usr._id %>" id="restorebtn" class="btn btn-warning" >
                                        restore
                                    </a>
                                    <%}%>
<!--//      dell/restore button ................................-->
                                    <% } %>
                                </td>
                            </tr>
                            <% }); %>

                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Sr no</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>UserName</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../template/foot'); -%>